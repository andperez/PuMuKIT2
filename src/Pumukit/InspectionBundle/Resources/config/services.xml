<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!--<parameter key="pumukit.inspection.class">Pumukit\InspectionBundle\Services\InspectionMediainfoService</parameter>-->
        <parameter key="pumukit.inspection.class">Pumukit\InspectionBundle\Services\InspectionFfprobeService</parameter>
    </parameters>

    <services>
        <service id="pumukit.inspection" class="%pumukit.inspection.class%">
          <argument>ffprobe -v quiet -print_format json -show_format -show_streams "{{file}}"</argument>
          <argument type="service" id="logger"/>
        </service>
    </services>
</container>
